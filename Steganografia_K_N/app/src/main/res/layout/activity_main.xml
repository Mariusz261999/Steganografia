<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7986AC"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15pt"
        android:layout_marginBottom="20pt"
        android:gravity="center"
        android:text="Steganografia"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10pt"
        android:gravity="center"
        android:text="Menu:"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF7986AC"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnEncode"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:text="Zakoduj"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnDecode"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:text="Zdekoduj"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnAuthors"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:text="Autorzy"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:text="Steganografia info"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:text="WyjdÅº"
            tools:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100pt"
            android:gravity="center_horizontal"
            android:text="@string/info" />
    </LinearLayout>

</LinearLayout>